# ============================================
# FEED IN NEED - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to git!

# ============================================
# DATABASE
# ============================================
MONGODB_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/feed_in_need?retryWrites=true&w=majority

# ============================================
# JWT (JSON Web Token)
# ============================================
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# ============================================
# CLOUDINARY (Image Upload)
# ============================================
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# EMAIL (SMTP - for verification emails)
# ============================================
# For Gmail: Enable "Less secure app access" or use App Password
# For other providers, use their SMTP settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=Feed In Need <your_email@gmail.com>

# ============================================
# UPSTASH REDIS (Rate Limiting)
# ============================================
# Get these from https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# ============================================
# FRONTEND URL (for CORS and email links)
# ============================================
# Local development
FRONTEND_URL=http://localhost:5173

# Production (update after deploying to Vercel)
# FRONTEND_URL=https://your-app-name.vercel.app

# ============================================
# SERVER
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# GOOGLE OAUTH (Optional - for Google Sign In)
# ============================================
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
