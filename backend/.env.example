# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/feed_in_need

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Admin Email Configuration
ADMIN_EMAIL=adhikarisubodh999@gmail.com

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Choose ONE email provider for production deployment:
#
# Option 1: RESEND (Recommended for production - resend.com)
# - Free tier: 100 emails/day, 3000/month
# - Works great on Render, Vercel, etc.
# EMAIL_PROVIDER=resend
# RESEND_API_KEY=re_xxxxxxxxxxxxx
# EMAIL_FROM=Feed In Need <noreply@yourdomain.com>
#
# Option 2: BREVO (formerly Sendinblue - brevo.com)
# - Free tier: 300 emails/day
# EMAIL_PROVIDER=brevo
# EMAIL_HOST=smtp-relay.brevo.com
# EMAIL_PORT=587
# EMAIL_USER=your_brevo_login_email
# EMAIL_PASS=your_brevo_smtp_key
#
# Option 3: MAILGUN (mailgun.com)
# EMAIL_PROVIDER=mailgun
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_USER=postmaster@your-domain.mailgun.org
# EMAIL_PASS=your_mailgun_password
#
# Option 4: GMAIL (Works locally, may fail in production)
# - Requires App Password: https://myaccount.google.com/apppasswords
# EMAIL_PROVIDER=gmail
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password
# ===========================================

# Default: Gmail (for local development)
EMAIL_PROVIDER=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Frontend URL (for email links - use your deployed URL in production)
# In production with same-domain setup, this can be same as BACKEND_URL
FRONTEND_URL=http://localhost:5173

# Backend URL (for certificate sharing and social media previews)
BACKEND_URL=http://localhost:5000

# Upstash Redis Configuration (Rate Limiting)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token
